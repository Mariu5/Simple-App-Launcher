{
	"name": "Simple Launcher",
	"version": "0.1.0.17",
	"manifest_version": 2,
	"description": "Open apps directly from a Chrome-Panel without leaving your current Tab.",
	"icons": { 
		"16": "image/icon_16.png",
		"48": "image/icon_48.png",
		"128": "image/icon_128.png"
	},
	// "background": {
		// "scripts": ["javascript/background.js"]
	// },
	"app": {
		"launch": {
			"local_path": "html/main.html",
			"container": "panel",
			"height": 300,
			"width": 230
		}
	},
	"minimum_chrome_version": "17",
	"offline_enabled": true,
	"permissions": [
		"management", 
		"unlimitedStorage",
		"topSites",
		"bookmarks"
	]
}